<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View register.audit.checklist.wizard form -->
    <record id="view_register_audit_checklist_wizard_form" model="ir.ui.view">
        <field name="name">view.register.audit.checklist.wizard.form</field>
        <field name="model">register.audit.checklist.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar auditoria">
                <div class="oe_title">
                    <label for="employee_id"/>
                    <h2>
                        <field name="employee_id" readonly="1" options="{'no_open':True}"/>
                    </h2>
                </div>
                <group>
                    <group>
                        <field name="audit_date" required="1"/>
                        <field name="audit_user_id" widget="many2one_avatar_user" required="1" options="{'no_create':True,'no_open':True}"/>
                    </group>
                    <group>
                        <field name="audit_notes" />
                    </group>
                </group>
                <footer>
                    <button name="confirm_audit" type="object" string="Confirmar" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
