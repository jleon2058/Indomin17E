<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_form_checklist" model="ir.ui.view">
        <field name="name">hr.employee.form.with.checklist</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string="Checklist de Documentos">

                    <group string="Porcentaje de Documentos">
                        <field name="document_completion" widget="progressbar" options="{'editable': false, 'colors': {'success': 80, 'warning': 50}}"/>
                    </group>
                    
                    <group>

                        <group string="1. Documentación Personal">

                            <group>
                                <field name="has_id" nolabel="1" class="oe_inline"/>
                                <label for="has_id" string="1.1. Copia DNI vigente del trabajador" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_id_hijo_conyuge" nolabel="1" class="oe_inline"/>
                                <label for="has_id_hijo_conyuge" string="1.2. Copia de DNI de hijos y/o cónyuge" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_copy_servicios" nolabel="1" class="oe_inline"/>
                                <label for="has_copy_servicios" string="1.3. Copia de servicios" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_foto_carnet" nolabel="1" class="oe_inline"/>
                                <label for="has_foto_carnet" string="1.4. Fotografía tamaño carnet (opcional)" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_ficha_datos" nolabel="1" class="oe_inline"/>
                                <label for="has_ficha_datos" string="1.5. Ficha de Datos Indomin / Mecaparts" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_doc_vida_ley" nolabel="1" class="oe_inline"/>
                                <label for="has_doc_vida_ley" string="1.6. Doc de Vida Ley Legalizado" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_declaracion_jur_dom" nolabel="1" class="oe_inline"/>
                                <label for="has_declaracion_jur_dom" string="1.7. Declaración jurad de Domicilio" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_declaracion_renta_quinta" nolabel="1" class="oe_inline"/>
                                <label for="has_declaracion_renta_quinta" string="1.8. Declaración de Renta de Quinta" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_copia_brevet_lic_cond" nolabel="1" class="oe_inline"/>
                                <label for="has_copia_brevet_lic_cond" string="1.9. Copia de brevee o licencia de conducir (si aplica)" class="ms-3"/>
                            </group>

                        </group>
                        

                        <group string="2. Documentación Laboral">
                            <group>
                                <field name="has_contrato_firmado" nolabel="1" class="oe_inline"/>
                                <label for="has_contrato_firmado" string="2.1. Contrato de trabajo firmado" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_cv" nolabel="1" class="oe_inline"/>
                                <label for="has_cv" string="2.2. Hoja de vida (CV) actualizada y documentada" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_declaracion_jur_ver_info" nolabel="1" class="oe_inline"/>
                                <label for="has_declaracion_jur_ver_info" string="2.3. Declaración jurada de veracidad de la información" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_antecedentes_pp" nolabel="1" class="oe_inline"/>
                                <label for="has_antecedentes_pp" string="2.4. Antecedentes penales/policiales (opcional)" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_ficha_st_personales" nolabel="1" class="oe_inline"/>
                                <label for="has_ficha_st_personales" string="2.5. Ficha de datos personales" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_const_STARSOFT" nolabel="1" class="oe_inline"/>
                                <label for="has_const_STARSOFT" string="2.6. Constancia de Alta en STARSOFT" class="ms-3"/>
                            </group>
                        </group>
                        
                        <group string="3. Obligaciones legales del Empleador">
                            <group>
                                <field name="has_registro_T_Registro" nolabel="1" class="oe_inline"/>
                                <label for="has_registro_T_Registro" string="3.1. Registro en T-Registro (SUNAT)" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_eleccion_sist_pre_ONP_AFP" nolabel="1" class="oe_inline"/>
                                <label for="has_eleccion_sist_pre_ONP_AFP" string="3.2. Elección del sistema previsional (ONP o AFP)" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_reg_cobert_SCTR" nolabel="1" class="oe_inline"/>
                                <label for="has_reg_cobert_SCTR" string="3.3. Registro y cobertura del SCTR (si aplica)" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_rem_cont_MTPE" nolabel="1" class="oe_inline"/>
                                <label for="has_rem_cont_MTPE" string="3.4. Remisión del contrato al MTPE (si es plazo fijo)" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_boleta_pag_elect" nolabel="1" class="oe_inline"/>
                                <label for="has_boleta_pag_elect" string="3.5. Entrega de boletas de pago electrónicas" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_banda_salar" nolabel="1" class="oe_inline"/>
                                <label for="has_banda_salar" string="3.6. Registro de la banda salarial del puesto" class="ms-3"/>
                            </group>

                            <group>
                                <field name="has_escala_salar" nolabel="1" class="oe_inline"/>
                                <label for="has_escala_salar" string="3.7. Entrega de la escala salarial y criterios de pago" class="ms-3"/>
                            </group>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
