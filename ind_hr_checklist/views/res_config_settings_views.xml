<?xml version="1.0" encoding="utf-8"?>
  <odoo>
      
    <!-- View res.config.settings form -->
    <record id="res_config_settings_view_form_inherit_hr_checklist" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.checklist</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='employees_setting_container']" position="inside">
              <setting id="employee_document_path_setting" help="Habilita el uso de una carpeta de OneDrive para almacenar documentos relacionados con los empleados." title="Ruta para documentos del empleado">
                <field name="enable_employee_docs"/>
                <div class="d-flex mt-1" invisible="not enable_employee_docs">
                  <span class="o_light_label ml16 mr8">Ruta</span>
                  <field name="employee_docs_path" placeholder="p. ej. https://OneDrive.com/Empleados/"/>
                </div>
                <div class="d-flex" invisible="not enable_employee_docs">
                  <field name="include_company_employee_docs_path" class="ml16"/>
                  <label for="include_company_employee_docs_path" class="o_light_label"/>
                </div>
              </setting>
            </xpath>
        </field>
    </record>

  </odoo>