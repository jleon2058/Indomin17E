<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="seq_service_order" model="ir.sequence">
            <field name="name">Secuencia para Órdenes de Trabajo</field>
            <field name="code">service.order</field>
            <field name="prefix">OT-</field>
            <field name="padding">7</field>
            <field name="suffix"></field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_service_conformity" model="ir.sequence">
          <field name="name">Secuencia para Conformidad de Servicio</field>
          <field name="code">service.conformity</field>  <!-- Código que se usará en el .next_by_code() -->
          <field name="prefix">CON-</field>              <!-- Prefijo personalizado -->
          <field name="padding">7</field>               <!-- 5 dígitos para la numeración -->
          <field name="number_next">1</field>           <!-- Empezar desde el 1 -->
          <field name="number_increment">1</field>      <!-- Incremento en cada nuevo registro -->
          <field name="company_id" eval="False"/>       <!-- Sin restricción por compañía -->
        </record>
    </data>

    

</odoo>
