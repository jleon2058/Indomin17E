<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_view_form_inherit_ind_service_order" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit.ind_service_order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//button[@name='button_cancel']" position="before">
                <field name="service_conformity_state" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="invisible"></attribute>
            </xpath>

            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="invisible">
                    state not in ('draft','to approve','sent','purchase') or service_conformity_state in ('approved') 
                </attribute>
            </xpath> 

        </field>
    </record>
</odoo>