<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_padre_hijo" model="ir.ui.view">
            <field name="name">parent.product.view.form</field>
            <field name="model">producto.padre</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <newline />
                            <group>
                                <field name="product_name" />
                                <field name="product_reference" />
                            </group>
                        </group>
                        <br></br>
                        <notebook>
                            <page name="alternatives_products" string="Productos alternativos">
                                <field name="product_alternativos"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_padre_hijo" model="ir.ui.view">
            <field name="name">parent.product.view.tree</field>
            <field name="model">producto.padre</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

</odoo>
