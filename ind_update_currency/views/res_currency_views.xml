<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_currency_form_inherit_ind_update_currency" model="ir.ui.view">
        <field name="name">res.currency.view.form.inherit.ind_update_currency</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_current_company_currency']" position="before">
                <header>
                    <button
                        string="Actualizar T.C. para un día específico"
                        name="action_open_day_update_wizard"
                        type="object"
                        class="oe_highlight"
                        groups="base.group_system"
                        invisible="name!='USD'"
                    />
                </header>
            </xpath>
        </field>
    </record>

</odoo>
