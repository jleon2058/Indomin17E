<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='payroll_group']" position="after">
                <group string='PIN' name="employee_pin_group">
                    <field name="has_employee_pin" invisible="has_employee_pin == False" />
                    <field name="employee_pin1" password="True" invisible="has_employee_pin != False" />
                    <field name="employee_pin2" password="True" invisible="has_employee_pin != False" />
                    <button name="save_employee_pin" string="Crear" type="object" class="oe_highlight" invisible="has_employee_pin != False" />
                    <button name="change_employee_pin" string="Modificar clave" type="object" class="oe_highlight" invisible="has_employee_pin == False" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>