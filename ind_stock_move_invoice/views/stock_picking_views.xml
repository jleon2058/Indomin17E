<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="stock_picking_form_view_inherited_account" model="ir.ui.view">
            <field name="name">stock.picking.view.form.inherit.ind_stock_move_invoice</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="account_move_ids" widget="many2many_tags"/>
                </xpath>

                <xpath expr="//button[@name='action_create_bill']" position="attributes">
                    <attribute name="string">Crear Factura</attribute>
                    <attribute name="groups">account.group_account_user</attribute>
                </xpath>

                 <xpath expr="//button[@name='action_create_invoice']" position="attributes">
                    <attribute name="invisible">True</attribute>
                    <attribute name="groups">account.group_account_user</attribute>
                </xpath>
            </field>
        </record>

        <record id="action_create_invoice_for_multi_transfer" model="ir.actions.server">
            <field name="name">Crear Facturas</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                action = records.action_create_multi_invoice_for_multi_transfer()
            </field>
        </record>

        <record id="stock_picking_tree_view_inherited_account" model="ir.ui.view">
            <field name="name">stock.picking.view.tree.inherited.ind_stock_move_invoice</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="account_move_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
</odoo>