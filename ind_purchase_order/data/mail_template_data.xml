<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_edi_notify_purchase_done" model="mail.template">
            <field name="name">Prueba: Enviar Orden de Compra a mi correo</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">[PRUEBA] Orden de Compra {{ object.name }}</field>
            <field name="email_to">luiggibc21@gmail.com</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hola,</p>
                    <p>Esta es una prueba automática de envío de correo cuando una orden de compra cambia a estado <strong>purchase</strong>.</p>
                </div>
            </field>
            <field name="report_template_ids" eval="[(4, ref('purchase.action_report_purchase_order'))]"/>
            <field name="lang">es_ES</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
