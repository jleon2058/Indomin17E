<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_purchase_order_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de las OC</field>
        <field name="res_model">report.purchase.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="purchase_order_report_wizard_view_form" model="ir.ui.view">
        <field name="name">purchase.order.report.wizard.view.form</field>
        <field name="model">report.purchase.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de OC">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="company_id" readonly="1"/>
                </group>
                <footer>
                    <button string="Exportar" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
