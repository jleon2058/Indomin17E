<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_purchase_request_import_wizard" model="ir.ui.view">
        <field name="name">purchase.request.import.line.form</field>
        <field name="model">purchase.request.import.line</field>
        <field name="arch" type="xml">
            <form string="Importar líneas de requerimiento">
                <group>
                    <field name="purchase_request_id"/>
                    <field name="file"/>
                </group>
                <footer>
                    <button name="import_lines" type="object" string="Importar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_request_import_line" model="ir.actions.act_window">
        <field name="name">Importar líneas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request.import.line</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
