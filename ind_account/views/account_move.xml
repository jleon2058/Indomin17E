<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_payment_term" model="ir.ui.view">
        <field name="name">account.move.form.inherit.draft.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="hide_button_draft" invisible="1"/>
            </xpath>
            <xpath expr="//header/button[@name='button_cancel']" position="after">
                <button name="button_draft" type="object" string="Pasar a Borrador" class="btn-secondary"
                        groups="account.group_account_manager"
                        invisible="hide_button_draft"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <button name="action_update_exchange_rate_nc"
                        type="object"
                        string="Actualizar T.C."
                        class="btn-primary"
                        modifiers='{"invisible": [["move_type", "!=", "in_refund"]]}'/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'show_address': 1, 'default_is_company': True, 'show_vat': True}</attribute>
                <attribute name="invisible">False</attribute>
                <attribute name="readonly">False</attribute>
            </xpath>

            <xpath expr="//field[@name='ref']" position="after">
                <field name="partner_id"
                       class="oe_inline col-6"
                       invisible="move_type != 'entry'"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">move_type == 'entry'</attribute>
            </xpath>
        </field>
    </record>
</odoo>