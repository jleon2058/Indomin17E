<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_view_form_inherit_account_exchange_currency" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.account_exchange_currency</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <label for="exchange_rate" />
                <div name="exchange_rate_div" class="d-flex">
                    <field name="exchange_rate" digits="[12,6]" />
                </div>
            </xpath>
        </field>
    </record>

</odoo>