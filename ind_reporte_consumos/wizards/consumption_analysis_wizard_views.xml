<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="consumption_analysis_wizard_view_form" model="ir.ui.view">
        <field name="name">consumption.analysis.wizard.view_form</field>
        <field name="model">consumption.analysis.wizard</field>
        <field name="arch" type="xml">
            <form string="Consumption Analysis Report">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="company_id"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Generar Reporte" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_consumption_analysis_wizard" model="ir.actions.act_window">
        <field name="name">Consumption Analysis</field>
        <field name="res_model">consumption.analysis.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menú -->
    <menuitem
        id="menu_consumption_analysis" 
        name="Reporte de Consumos" 
        parent="stock.menu_warehouse_report" 
        action="action_consumption_analysis_wizard" 
        sequence="20"
        groups="ind_reporte_consumos.res_group_consumption_report_user"
    />

</odoo>
