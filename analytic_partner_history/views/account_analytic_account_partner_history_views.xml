<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_history_tree" model="ir.ui.view">
        <field name="name">Historial de Ubicaciones Tree</field>
        <field name="model">account.analytic.account.partner.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" string="Fecha de creación"/>
                <field name="write_date" string="Última modificación"/>
                <!-- <field name="location_id"/> -->
                <field name="ubication_id"/>
                <field name="analytic_account_id" string="Centro de Costo"/>
            </tree>
        </field>
    </record>

    <record id="action_partner_history" model="ir.actions.act_window">
        <field name="name">Historial de Ubicaciones</field>
        <field name="res_model">account.analytic.account.partner.history</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('analytic_account_id', '=', active_id)]</field>
        <field name="help">Lista de historial de ubicaciones asignadas a centros de costo.</field>
        <field name="context">{'default_analytic_account_id': active_id}</field>
    </record>

</odoo>
