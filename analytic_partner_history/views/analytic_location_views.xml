<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="location_mining_view_form" model="ir.ui.view">
        <field name="name">location.mining.view.form</field>
        <field name="model">analytic.location</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code"/>
                        <field name="active" widget="boolean_toggle" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="location_mining_view_tree" model="ir.ui.view">
        <field name="name">field_value</field>
        <field name="model">analytic.location</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="code" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

</odoo>
