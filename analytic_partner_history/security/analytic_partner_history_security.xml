<odoo>
    <!-- Grupo de Usuarios -->
    <record id="group_partner_history_manager" model="res.groups">
        <field name="name">Gestor de Historial de Clientes</field>
        <field name="category_id" ref="base.module_category_accounting"/>
    </record>

    <!-- Reglas de Acceso -->
    <record id="partner_history_rule_access" model="ir.model.access">
        <field name="name">Access to Partner History</field>
        <field name="model_id" ref="model_account_analytic_account_partner_history"/>
        <field name="group_id" ref="analytic_partner_history.group_partner_history_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
