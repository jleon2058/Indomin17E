<?xml version="1.0" ?>
<odoo>
    <!-- Posicionar el botón "Create Pickup Request" después del botón "Create Invoice" -->
    <record id="view_purchase_order_form_inherit_pickup" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.pickup</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Posiciona el botón "Create Pickup Request" después de "Create Invoice" -->
            <xpath expr="//button[@name='action_create_invoice']" position="after">
                <button name="action_create_pickup_request" type="object" string="Crear Solicitud de Recojo" class="oe_highlight"
                        invisible="state != 'purchase'"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_form_inherit_hide_rfq_send" model="ir.ui.view">
        <field name="name">purchase.order.form.hide_rfq_send</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Hacer invisible el botón "Send by Email" -->
            <xpath expr="//button[@name='action_rfq_send']" position="replace">
                <button name="action_rfq_send" invisible="1" type="object"/>
            </xpath>
        </field>
    </record>

    <record id="action_pickup_request" model="ir.actions.act_window">
        <field name="name">Solicitudes de Recojo</field>
        <field name="res_model">pickup.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_pickup_request_tree"/>
    </record>

    <record id="view_purchase_order_form_with_pickup_requests" model="ir.ui.view">
        <field name="name">purchase.order.form.with.pickup.requests</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Solicitudes de Recojo">
                    <field name="pickup_request_ids" widget="one2many_list">
                        <tree editable="bottom">
                            <field name="pickup_datetime"/>
                            <field name="requested_by"/>
                            <field name="status"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Menú en Inventario -->
<menuitem id="menu_pickup_request_inventory" name="Solicitudes de Recojo"
    parent="stock.menu_stock_root" action="action_pickup_request" groups="group_pickup_request_user"/>

</odoo>