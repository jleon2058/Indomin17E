<odoo>
    <!-- Grupo de acceso para las Solicitudes de Recojo -->
    <record id="group_pickup_request_user" model="res.groups">
        <field name="name">Pickup Request User</field>
        <field name="category_id" ref="base.module_category_purchase_management"/>
    </record>

    <!-- Grupo de acceso para Choferes -->
    <record id="group_driver" model="res.groups">
        <field name="name">Conductor</field>
        <field name="category_id" ref="base.module_category_purchase_management"/>
    </record>

    <record id="access_partner_delivery_address_pickup_user" model="ir.model.access">
        <field name="name">Access Partner Delivery Address for Pickup Users</field>
        <field name="model_id" ref="model_partner_delivery_address"/>
        <field name="group_id" ref="ind_purchase_pickup_request.group_pickup_request_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_partner_delivery_address_driver" model="ir.model.access">
        <field name="name">Access Partner Delivery Address for Drivers</field>
        <field name="model_id" ref="model_partner_delivery_address"/>
        <field name="group_id" ref="ind_purchase_pickup_request.group_driver"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    <!-- Grupo de acceso solo para visualizar Solicitudes de Recojo -->
    <record id="group_pickup_request_viewer" model="res.groups">
        <field name="name">Pickup Request Viewer</field>
        <field name="category_id" ref="base.module_category_purchase_management"/>
    </record>

    <!-- Acceso de solo lectura al modelo pickup.request -->
    <record id="access_pickup_request_viewer" model="ir.model.access">
        <field name="name">Access Pickup Request Viewer</field>
        <field name="model_id" ref="model_pickup_request"/>
        <field name="group_id" ref="ind_purchase_pickup_request.group_pickup_request_viewer"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>