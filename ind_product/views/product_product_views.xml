<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Herencia de Vista Tree de Product product -->
    <record id="ind_product_product_tree" model="ir.ui.view">
        <field name="name">product.product.view.tree.inherit.ind_product</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">ind_product.group_product_price</attribute>
            </xpath>
        </field>
    </record>

</odoo>
