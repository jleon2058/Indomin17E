<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_account_move_line_export_wizard" model="ir.ui.view">
      <field name="name">account.move.line.export.wizard.form</field>
      <field name="model">account.move.line.export.wizard</field>
      <field name="arch" type="xml">
        <form string="Exportar Movimientos de Cuenta">
            <group>
                <field name="date_filter_i"/>
                <field name="date_filter_s"/>
                <field name="state_filter"/>
                <field name="journal_filter"/>
            </group>
             
            <footer>
                <button string="Exportar documentos originales" type="object" name="action_export_excel" class="btn-primary"/>
                <button string="Exportar Reporte" type="object" name="action_export_modified_excel" class="btn-success"/>
                <button string="Cancelar" class="btn-secondary" special="cancel"/>
            </footer> 
        </form>
      </field>
    </record>


    <record id="action_export_account_move_line" model="ir.actions.act_window">
        <field name="name">Exportar apuntes contables</field>
        <field name="res_model">account.move.line.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_export_account_move_line"
          name="Exportar apuntes contables"
          action="action_export_account_move_line"
          parent="account.menu_finance_entries_accounting_miscellaneous" />
</odoo>
